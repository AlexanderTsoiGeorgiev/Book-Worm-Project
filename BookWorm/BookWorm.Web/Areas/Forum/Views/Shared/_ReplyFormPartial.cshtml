@model ReplyFormViewModel

<div class="row">
    <div class="col-8 offset-2">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Content" class="form-label">Content</label>
                <textarea asp-for="@Model.Content" class="form-control" rows="7"></textarea>
                <span asp-validation-for="@Model.Content"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="@ViewData["Action"]" />
            </div>
        </form>
    </div>
</div>