@model ForumFormViewModel

<div class="row">
    <div class="col-8 offset-2">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Content" class="form-label">Content</label>
                <textarea asp-for="@Model.Content" class="form-control" rows="5"></textarea>
                <span asp-validation-for="@Model.Content"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.TagId" class="form-label"></label>
                <select asp-for="@Model.TagId" class="form-select" aria-label="Default select example">
                    @foreach (TagDisplayViewModel tag in Model.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }
                </select>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="@ViewData["Action"]" />
            </div>
        </form>
    </div>
</div>