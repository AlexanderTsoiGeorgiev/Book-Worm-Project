@model ReviewDisplayViewModel

<div class="col-md-4">
    <div class="card mb-3">
        <div class="card-body text-center">
            <h4>
                @Model.Title
            </h4>
            <h6>
                @Model.DatePosted
            </h6>
            <p>
                Rating: @(Model.Upvotes - Model.Downvotes)
            </p>
            <a asp-area="" asp-controller="Review" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Details</a>
        </div>
    </div>
</div>