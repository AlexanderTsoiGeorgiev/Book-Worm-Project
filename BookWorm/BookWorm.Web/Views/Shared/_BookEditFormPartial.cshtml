@model BookFormViewModel

<div class="row">
    <div class="col-8 offset-2">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title"></span>
            </div>

            <div class="mb-3">
                <div class="mb-1">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="@Model.Description"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">ImageUrl</label>
                <input asp-for="@Model.ImageUrl" class="form-control" />
                <span asp-validation-for="@Model.ImageUrl"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Price">Price</label>
                <input asp-for="@Model.Price" class="form-control">
                <span asp-validation-for="@Model.Price"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label"></label>
                <input asp-for="@Model.Quantity" class="form-control" value="1" step="1" />
                <span asp-validation-for="@Model.Quantity"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Poems" class="form-label">Choose poems:</label>
                <select asp-for="@Model.PoemIds" class="form-select" multiple aria-label="multiple select example">
                    @foreach (var poem in Model.Poems!)
                    {
                        if (Model.SelectedPoemsIds!.Contains(poem.Id.ToString().ToUpper()))
                        {
                            <option selected value="@poem.Id">@poem.Title</option>
                        }
                        else
                        {
                            <option value="@poem.Id">@poem.Title</option>
                        }
                    }
                </select>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="@ViewData["Action"]" />
            </div>
        </form>
    </div>
</div>
