@model ReviewFormViewModel

<div class="row">
    <div class="col-8 offset-2">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Content" class="form-label">Content</label>
                <textarea asp-for="@Model.Content" class="form-control" rows="5"></textarea>
                <span asp-validation-for="@Model.Content"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Rating" class="form-label">Rating</label>
                <input asp-for="@Model.Rating" type="number" class="form-control" step="0.5" />
                <span asp-validation-for="@Model.Rating"></span>
            </div>


            @*This was unnecessary, but helped me understand how data is transfered in the http protocol*@
            @*<div class="d-none">
                <input asp-for="@Model.PoemId" value="@Model.PoemId"/>
            </div>

            <div class="d-none">
                <input asp-for="@Model.BookId" value="@Model.BookId" />
            </div>*@

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="@ViewData["Action"]" />
            </div>
        </form>
    </div>
</div>